<!DOCTYPE html>
<html>
<body>

<h1>The Window Object</h1>
<h2>The setInterval() and clearInterval() Methods</h2>

<p id="demo"></p>
<p id="details"></p>

<button onclick="myStop()">Stop the time</button>
<button onclick="resetTimer()">Reset the time</button>
<button onclick="startTimer()">Start the time</button>

<p id="demo-crono">00:00:00</p>
<p id="details-crono"></p>

<button onclick="startCrono()">Start the cronometer</button>
<button onclick="stopCrono()">Stop the cronometer</button>
<button onclick="resumeCrono()">Resume the cronometer</button>
<button onclick="resetCrono()">Reset the cronometer</button>

<script>
const myInterval = setInterval(myTimer, 1000);
let date = new Date();
document.getElementById("details").innerHTML = "the timer has started"

function myTimer() {
  date = new Date();
  document.getElementById("demo").innerHTML = date.toLocaleTimeString();
}


let intervalID


function startTimer() {
  intervalID = setInterval(myTimer, 1000);
  document.getElementById("details").innerHTML = "the timer has started"
}

function myStop() {
  clearInterval(myInterval);
  clearInterval(intervalID);
  document.getElementById("details").innerHTML = "the timer has stoped"
}


function resetTimer() {
  myStop()
  document.getElementById("demo").innerHTML = "00:00:00"; 
  document.getElementById("details").innerHTML = "the timer was reset";
}

let cronoIntervalID
let startTime
let resumeTime = new Date()

function crono() {
	let cronoTime = date.getTime() - startTime.getTime();
    
    let seconds = Math.floor((cronoTime / 1000) % 60).toString().padStart(2, "0");
    
    let minutes = Math.floor((cronoTime / (1000 * 60)) % 60).toString().padStart(2, "0");
    
    let hours = Math.floor((cronoTime / (1000 * 60 * 60)) % 24).toString().padStart(2, "0");
    
    document.getElementById("demo-crono").innerHTML = `${hours}:${minutes}:${seconds}`;
}

function startCrono() {
  startTime = new Date(); 
  cronoIntervalID = setInterval( () => { crono();}, 1000);  
}

/*
function resumeCrono {
  startTime = resumeTime;
  cronoIntervalID = setInterval( () => { crono();}, 1000);
}
*/


function stopCrono() {
  resumeTime = document.getElementById("demo-crono").innerHTML
  clearInterval(cronoIntervalID);
}


function resetCrono() {
  stopCrono()
  document.getElementById("demo-crono").innerHTML = "00:00:00"; 
}

</script>

</body>
</html>
